# Telegram bot token (REQUIRED)
BOT_TOKEN=

# Name of the custom global agent in ~/.kiro/agents/ (REQUIRED, >= 3 chars)
KIRO_AGENT_NAME=tg-acp

# Path to kiro-config/ template directory (default: ./kiro-config/)
KIRO_CONFIG_PATH=./kiro-config/

# Base directory for per-user/thread workspaces (default: ./workspaces/)
WORKSPACE_BASE_PATH=./workspaces/

# Max kiro-cli processes in the pool (default: 5, >= 1)
MAX_PROCESSES=5

# Idle timeout in seconds before killing extra processes (default: 30, >= 0)
IDLE_TIMEOUT_SECONDS=30

# Logging level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Comma-separated Telegram user IDs allowed to use the bot (default: empty = nobody allowed)
# Deploy with empty, message the bot to get your ID, then add it here
ALLOWED_TELEGRAM_IDS=
